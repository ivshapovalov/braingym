<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/groundChainCharacter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    tools:context="ru.whydt.brain_gym.ChainCharacterActivity"
    android:stretchColumns="*">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0">

        <Button
            android:id="@+id/buttonHome"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_house"
            android:onClick="buttonHome_onClick"
            android:textSize="12sp"
            android:layout_span="2" />

        <Button
            android:id="@+id/buttonChainCharacterStartPause"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:onClick="startPause_onClick"
            android:text="@string/button_nameStartPause"
            android:textSize="12sp"
            android:layout_span="2" />


        <Button
            android:id="@+id/buttonChainCharacterClear"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:onClick="ChainCharacterClear_onClick"
            android:text="@string/button_nameStop"
            android:textSize="12sp"
            android:layout_span="2" />

        <Button
            android:id="@+id/buttonChainCharacterOptions"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:onClick="ChainCharacterOptions_onClick"
            android:text="@string/button_nameOptions"
            android:textSize="12sp"
            android:layout_span="2" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_weight="100"
            android:textColor="#6d6464"
            android:layout_span="8"
            android:text="Определите количество вхождений символа слева в последовательность справа"
            android:textIsSelectable="false" />
    </TableRow>

    <TableRow
        android:id="@+id/trowChainCharacter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:layout_weight="0">

        <TextView
            android:id="@+id/tvChainCharacterTimerMaxTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:layout_marginStart="12sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#bb1e1e"
            android:layout_span="3" />

        <TextView
            android:id="@+id/tvChainCharacterTimerExTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:layout_marginStart="12sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#bb1e1e"
            android:layout_span="3" />

        <TextView
            android:id="@+id/tvChainCharacterAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:layout_marginStart="12sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#bb1e1e"
            android:layout_span="2" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvChainCharacterExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="100"
            android:textColor="#6d6464"
            android:layout_span="8" />

    </TableRow>

    <TableLayout
        android:id="@+id/tableChainCharacterAnswers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="100"
        android:layout_marginTop="25dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_weight="0">

            <TextView
                android:id="@+id/tvChainCharacterAnswer1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvChainCharacterAnswer2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingTop="20sp"
                android:paddingBottom="20sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="0">

            <TextView
                android:id="@+id/tvChainCharacterAnswer3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp" />

            <TextView
                android:id="@+id/tvChainCharacterAnswer4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="0">

            <TextView
                android:id="@+id/tvChainCharacterAnswer5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp" />

            <TextView
                android:id="@+id/tvChainCharacterAnswer6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="0">

            <TextView
                android:id="@+id/tvChainCharacterAnswer7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp" />

            <TextView
                android:id="@+id/tvChainCharacterAnswer8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp" />
        </TableRow>

    </TableLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <Chronometer
            android:id="@+id/chronometer_chain_character"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:clickable="true"
            android:format="%s"
            android:gravity="center"
            android:onClick="startPause_onClick"
            android:textColor="#e71f1f"
            android:textSize="25sp"
            android:visibility="gone" />
    </TableRow>

</TableLayout>
