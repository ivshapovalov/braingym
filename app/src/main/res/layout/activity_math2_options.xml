<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.brainworkout.brain_gym.MathActivity2Options">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="20"
            android:background="@drawable/ic_house"
            android:onClick="buttonHome_onClick" />

        <Button

            android:id="@+id/buttonSave"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:onClick="buttonSave_onClick"
            android:text="Сохранить"
            android:textSize="12sp" />

        <Button

            android:id="@+id/buttonCancel"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:onClick="buttonCancel_onClick"
            android:text="Отмена"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/textview_border">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:text="Использовать числа до"
            android:textSize="12sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgMath2MaxDigit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"

            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbMath2MaxDigit100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:checked="true"
                android:text="100"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rbMath2MaxDigit300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:text="300"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rbMath2MaxDigit1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:text="1000"
                android:textSize="12sp" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/textview_border">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Время теста (сек)"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_weight="50" />

        <RadioGroup
            android:id="@+id/rgMath2MaxTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="50" >

            <RadioButton
                android:id="@+id/rbMath2MaxTime60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="60"
                android:layout_weight="50"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rbMath2MaxTime120"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:layout_weight="50"
                android:textSize="12sp" />
            <RadioButton
                android:id="@+id/rbMath2MaxTime180"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="180"
                android:layout_weight="50"
                android:textSize="12sp" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/textview_border">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Время на пример (сек)"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_weight="30" />

        <RadioGroup
            android:id="@+id/rgMath2ExTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="70" >

            <RadioButton
                android:id="@+id/rbMath2ExTime0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_weight="33"
                android:text="@string/infinity"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rbMath2ExTime5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_weight="33"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rbMath2ExTime10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:layout_weight="33"
                android:textSize="12sp" />

        </RadioGroup>
    </LinearLayout>

</RelativeLayout>

