<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/groundMath2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    tools:context="ru.brainworkout.brain_gym.MathActivity2"
    android:stretchColumns="*">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0">

        <Button
            android:id="@+id/buttonHome"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_house"
            android:onClick="buttonHome_onClick"
            android:textSize="12sp"
            android:layout_span="2" />

        <Button
            android:id="@+id/buttonMath2StartPause"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:onClick="startPause_onClick"
            android:text="@string/button_nameStartPause"
            android:textSize="12sp"
            android:layout_span="2" />


        <Button
            android:id="@+id/buttonMath2Clear"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:onClick="Math2Clear_onClick"
            android:text="@string/button_nameStop"
            android:textSize="12sp"
            android:layout_span="2" />

        <Button
            android:id="@+id/buttonMath2Options"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:onClick="Math2Options_onClick"
            android:text="@string/button_nameOptions"
            android:textSize="12sp"
            android:layout_span="2" />
    </TableRow>

    <TableRow
        android:id="@+id/trowMath2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:layout_weight="0">

        <TextView
            android:id="@+id/tvMath2TimerMaxTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:layout_marginStart="12sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#bb1e1e"
            android:layout_span="3" />

        <TextView
            android:id="@+id/tvMath2TimerExTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:layout_marginStart="12sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#bb1e1e"
            android:layout_span="3" />

        <TextView
            android:id="@+id/tvMath2Answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:layout_marginStart="12sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#bb1e1e"
            android:layout_span="2" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvMath2Example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_column="0"
            android:textColor="#6d6464" />

    </TableRow>

    <TableLayout
        android:id="@+id/tablMath2Answers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="100"
        android:layout_marginTop="25dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_weight="0">

            <TextView
                android:id="@+id/tvMath2Symbol1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvMath2Symbol2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="20sp"
                android:paddingBottom="20sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="0">

            <TextView
                android:id="@+id/tvMath2Symbol3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp" />

            <TextView
                android:id="@+id/tvMath2Symbol4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="0">

            <TextView
                android:id="@+id/tvMath2Symbol5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp" />

            <TextView
                android:id="@+id/tvMath2Symbol6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="0">

            <TextView
                android:id="@+id/tvMath2Symbol7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp" />

            <TextView
                android:id="@+id/tvMath2Symbol8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="0">

            <TextView
                android:id="@+id/tvMath2Symbol9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp" />

            <TextView
                android:id="@+id/tvMath2Symbol0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp" />
        </TableRow>
    </TableLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <Chronometer
            android:id="@+id/chronometer_math2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:clickable="true"
            android:format="%s"
            android:gravity="center"
            android:onClick="startPause_onClick"
            android:textColor="#e71f1f"
            android:textSize="25sp"
            android:visibility="gone" />
    </TableRow>

</TableLayout>
