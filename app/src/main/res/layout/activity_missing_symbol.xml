<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/groundMissingSymbol"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    tools:context="ru.brainworkout.braingym.MissingSymbolActivity"
    android:stretchColumns="*">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0">

        <Button
            android:id="@+id/buttonHome"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_house"
            android:onClick="buttonHome_onClick"
            android:textSize="12sp"
            android:layout_span="2" />

        <Button
            android:id="@+id/buttonMissingSymbolStartPause"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:onClick="startPause_onClick"
            android:text="@string/button_nameStartPause"
            android:textSize="12sp"
            android:layout_span="2" />


        <Button
            android:id="@+id/buttonMissingSymbolClear"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:onClick="MissingSymbolClear_onClick"
            android:text="@string/button_nameStop"
            android:textSize="12sp"
            android:layout_span="2" />

        <Button
            android:id="@+id/buttonMissingSymbolOptions"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:onClick="MissingSymbolOptions_onClick"
            android:text="@string/button_nameOptions"
            android:textSize="12sp"
            android:layout_span="2" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_weight="100"
            android:textColor="#6d6464"
            android:layout_span="8"
            android:text="Определите пропущенный символ последовательности. Цветом выделены первый и последний символ последовательности."
            android:textIsSelectable="false" />
    </TableRow>

    <TableRow
        android:id="@+id/trowMissingSymbol"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:layout_weight="0">

        <TextView
            android:id="@+id/tvMissingSymbolTimerMaxTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:layout_marginStart="12sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#bb1e1e"
            android:layout_span="3" />

        <TextView
            android:id="@+id/tvMissingSymbolTimerExTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:layout_marginStart="12sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#bb1e1e"
            android:layout_span="3" />

        <TextView
            android:id="@+id/tvMissingSymbolAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:layout_marginStart="12sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#bb1e1e"
            android:layout_span="2" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvMissingSymbolExample1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_column="0"
            android:textColor="#6d6464" />

        <TextView
            android:id="@+id/tvMissingSymbolExample2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_column="1"
            android:textColor="#6d6464" />

        <TextView
            android:id="@+id/tvMissingSymbolExample3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_column="2"
            android:textColor="#6d6464" />

        <TextView
            android:id="@+id/tvMissingSymbolExample4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_column="3"
            android:textColor="#6d6464" />

        <TextView
            android:id="@+id/tvMissingSymbolExample5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_column="4"
            android:textColor="#6d6464" />

        <TextView
            android:id="@+id/tvMissingSymbolExample6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_column="5"
            android:textColor="#6d6464" />

        <TextView
            android:id="@+id/tvMissingSymbolExample7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_column="6"
            android:textColor="#6d6464" />

        <TextView
            android:id="@+id/tvMissingSymbolExample8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_column="7"
            android:textColor="#6d6464" />
    </TableRow>

    <TableLayout
        android:id="@+id/tableMissingSymbolAnswers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="100"
        android:layout_marginTop="25dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_weight="0">

            <TextView
                android:id="@+id/tvMissingSymbolAnswer1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvMissingSymbolAnswer2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="20sp"
                android:paddingBottom="20sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="0">

            <TextView
                android:id="@+id/tvMissingSymbolAnswer3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp" />

            <TextView
                android:id="@+id/tvMissingSymbolAnswer4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="0">

            <TextView
                android:id="@+id/tvMissingSymbolAnswer5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp" />

            <TextView
                android:id="@+id/tvMissingSymbolAnswer6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="0">

            <TextView
                android:id="@+id/tvMissingSymbolAnswer7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp" />

            <TextView
                android:id="@+id/tvMissingSymbolAnswer8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="20sp"
                android:paddingTop="20sp" />
        </TableRow>

    </TableLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <Chronometer
            android:id="@+id/chronometer_missing_symbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:clickable="true"
            android:format="%s"
            android:gravity="center"
            android:onClick="startPause_onClick"
            android:textColor="#e71f1f"
            android:textSize="25sp"
            android:visibility="gone" />
    </TableRow>

</TableLayout>
