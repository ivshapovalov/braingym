<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.brainworkout.brain_gym.PairsActivityOptions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/line1">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:background="@drawable/ic_house"
            android:onClick="buttonHome_onClick"
            android:layout_gravity="center" />

        <Button

            android:id="@+id/buttonSave"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonSave_onClick"
            android:text="Сохранить"
            android:textSize="12sp"
            android:layout_weight="40" />

        <Button

            android:id="@+id/buttonCancel"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonCancel_onClick"
            android:text="Отмена"
            android:textSize="12sp"
            android:layout_weight="40" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linePairsLang"
        android:layout_below="@+id/line1">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:text="Элементы"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_weight="20" />

        <RadioGroup
            android:id="@+id/rgPairsLang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"

            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbPairsLangRu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:checked="true"
                android:text="Ru"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rbPairsLangEn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:text="En"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rbPairsLangDigit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:text="1-100"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rbPairsLangPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:text="Картинки"
                android:textSize="12sp" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linPairsSizeHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linePairsLang"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="20"
            android:text="Высота "
            android:textSize="12sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgPairsSizeHeight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rbPairsSizeHeight3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:checked="true"
                android:text="3"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rbPairsSizeHeight4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="4"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rbPairsSizeHeight5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="5"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rbPairsSizeHeight6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="6"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rbPairsSizeHeight7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="7"
                android:textSize="12sp" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linePairsSizeWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linPairsSizeHeight"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="20"
            android:text="Ширина"
            android:textSize="12sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgPairsSizeWidth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rbPairsSizeWidth3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:checked="true"
                android:text="3"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rbPairsSizeWidth4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="4"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rbPairsSizeWidth5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="5"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rbPairsSizeWidth6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="6"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rbPairsSizeWidth7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="7"
                android:textSize="12sp" />
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>
