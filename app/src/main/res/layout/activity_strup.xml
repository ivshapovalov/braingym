<?xml version="1.0" encoding="utf-8"?>
   <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:context=".strup_test.StrupActivity"
        android:id="@+id/groundStrup">
         <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0">

             <Button
                 style="?android:attr/buttonStyleSmall"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/button11"
                 android:onClick="buttonHome_onClick"
                 android:layout_column="1"
                 android:layout_weight="25"
                 android:textSize="10sp"
                 android:layout_gravity="center"
                 android:background="@drawable/ic_house" />

             <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_nameStartPause"
                android:id="@+id/buttonStrupStartPause"
                android:textSize="10sp"
                android:onClick="startPause_onClick"
                android:layout_weight="25"
                android:layout_column="2"
                android:layout_gravity="center"
                android:background="@drawable/textview_border" />



            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_nameStop"
                android:id="@+id/buttonStrupClear"
                android:onClick="strupClear_onClick"


                android:textSize="10sp"
                     android:layout_weight="25"
                android:layout_column="3"
                android:layout_gravity="center"
                android:background="@drawable/textview_border" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_nameOptions"
                android:id="@+id/buttonStrupOptions"
                android:onClick="strupOptions_onClick"
                android:layout_weight="25"
                android:textSize="10sp"
                android:layout_column="4"
                android:layout_gravity="center"
                android:background="@drawable/textview_border" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <Chronometer
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chronometer_strup"
                android:onClick="startPause_onClick"
                android:clickable="true"
                android:textColor="#e71f1f"
                android:textSize="25sp"
                android:gravity="center"
                android:format="Time: %s"
                android:layout_span="4"
                android:layout_weight="100"
                android:layout_gravity="center_vertical" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:layout_gravity="fill">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:id="@+id/frame"
                android:layout_weight="100"
                android:layout_span="4"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/textview_border">
        </FrameLayout>
        </TableRow>

    </TableLayout>
