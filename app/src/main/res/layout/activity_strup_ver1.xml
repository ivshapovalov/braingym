<?xml version="1.0" encoding="utf-8"?>
   <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:context="ru.whydt.brain_gym.StrupActivity_ver1"
        android:id="@+id/groundStrup_ver1">
         <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0">

             <Button
                 style="?android:attr/buttonStyleSmall"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/button11"
                 android:onClick="buttonHome_onClick"
                 android:layout_column="1"
                 android:layout_weight="25"
                 android:textSize="10sp"
                 android:layout_gravity="center"
                 android:background="@drawable/ic_house" />

             <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_nameStartPause"
                android:id="@+id/buttonStrupStartPause"
                android:textSize="10sp"
                android:onClick="startPause_onClick"
                android:layout_weight="25"
                android:layout_column="2"
                android:layout_gravity="center"
                android:background="@drawable/textview_border" />



            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_nameStop"
                android:id="@+id/buttonStrupClear"
                android:onClick="strupVer1Clear_onClick"


                android:textSize="10sp"
                     android:layout_weight="25"
                android:layout_column="3"
                android:layout_gravity="center"
                android:background="@drawable/textview_border" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_nameOptions"
                android:id="@+id/buttonStrupOptions"
                android:onClick="strupVer1Options_onClick"
                android:layout_weight="25"
                android:textSize="10sp"
                android:layout_column="4"
                android:layout_gravity="center"
                android:background="@drawable/textview_border" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/rounded_corners1"
            android:layout_marginTop="20dp">

            <Chronometer
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chronometer_strup"
                android:onClick="startPause_onClick"
                android:clickable="true"
                android:textColor="#e71f1f"
                android:textSize="25dp"
                android:gravity="center"
                android:format="%s"
                android:layout_weight="25"
                android:layout_column="1"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/txtTimer"
                android:layout_column="2"
                android:layout_weight="50"
                android:layout_span="2"
                android:textSize="25dp"
                android:textColor="#bb1e1e"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textViewAnswers"
                android:textSize="25sp"
                android:layout_column="3"
                android:layout_weight="25"
                android:textColor="#bb1e1e" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            android:layout_weight="0"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewType"
                android:layout_weight="100"
                android:layout_span="4"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="20sp"
                android:background="@drawable/rounded_corners1"
                android:textColor="#060606" />
        </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:layout_weight="0" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewExample"
            android:layout_weight="100"
            android:layout_span="4"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"
            android:background="@drawable/rounded_corners1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corners1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="100"
            android:layout_span="4">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_weight="0"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewColor1"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:onClick="txt_onClick"
                    android:singleLine="true"
                    android:layout_weight="50"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewColor2"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:onClick="txt_onClick"
                    android:singleLine="true"
                    android:layout_weight="50"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_weight="0"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewColor3"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:onClick="txt_onClick"
                    android:singleLine="true"
                    android:layout_weight="50"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewColor4"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:onClick="txt_onClick"
                    android:singleLine="true"
                    android:layout_weight="50"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_weight="0"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewColor5"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:onClick="txt_onClick"
                    android:singleLine="true"
                    android:layout_weight="50"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewColor6"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:onClick="txt_onClick"
                    android:singleLine="true"
                    android:layout_weight="50"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_weight="0"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewColor7"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:onClick="txt_onClick"
                    android:singleLine="true"
                    android:layout_weight="50"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewColor8"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:onClick="txt_onClick"
                    android:singleLine="true"
                    android:layout_weight="50"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center" />
            </TableRow>

        </TableLayout>
    </TableRow>

</TableLayout>
