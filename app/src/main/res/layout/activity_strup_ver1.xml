<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/groundStrup_ver1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    tools:context="ru.brainworkout.brain_gym.StrupActivity_ver1"
    android:stretchColumns="*">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0">

        <Button
            android:id="@+id/button11"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_house"
            android:onClick="buttonHome_onClick"
            android:textSize="12sp"
            android:layout_span="2" />

        <Button
            android:id="@+id/buttonStrupVer1StartPause"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:onClick="startPauseStrupVer1_onClick"
            android:text="@string/button_nameStartPause"
            android:textSize="12sp"
            android:layout_span="2" />


        <Button
            android:id="@+id/buttonStrupVer1Clear"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:onClick="strupVer1Clear_onClick"
            android:text="@string/button_nameStop"
            android:textSize="12sp"
            android:layout_span="2" />

        <Button
            android:id="@+id/buttonStrupVer1Options"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:onClick="strupVer1Options_onClick"
            android:text="@string/button_nameOptions"
            android:textSize="12sp"
            android:layout_span="2" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_weight="100"
            android:textColor="#6d6464"
            android:layout_span="8"
            android:text="Определите цвет или слово в зависимости от задания"
            android:textIsSelectable="false" />
    </TableRow>

    <TableRow
        android:id="@+id/trowStrupVer1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:layout_weight="0">

        <TextView
            android:id="@+id/tvStrupVer1TimerMaxTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:layout_marginStart="12sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#bb1e1e"
            android:layout_span="3" />

        <TextView
            android:id="@+id/tvStrupVer1TimerExTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:layout_marginStart="12sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#bb1e1e"
            android:layout_span="3" />

        <TextView
            android:id="@+id/tvStrupVer1Answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:layout_marginStart="12sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#bb1e1e"
            android:layout_span="2" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:layout_marginTop="10sp"
        android:layout_weight="0">

        <TextView
            android:id="@+id/tvStrupVer1Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_span="8"
            android:layout_weight="100"
            android:gravity="center"
            android:textColor="#060606"
            android:textSize="20sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:layout_weight="0"
        android:layout_marginTop="10sp">

        <TextView
            android:id="@+id/tvStrupVer1Example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_span="8"
            android:layout_weight="100"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold" />
    </TableRow>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tvStrupVer1Color1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="txt_onClick"
            android:singleLine="true"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:layout_weight="50"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvStrupVer1Color2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="txt_onClick"
            android:singleLine="true"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:gravity="center"
            android:layout_weight="50" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TextView
            android:id="@+id/tvStrupVer1Color3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:onClick="txt_onClick"
            android:singleLine="true"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvStrupVer1Color4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:onClick="txt_onClick"
            android:singleLine="true"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvStrupVer1Color5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:onClick="txt_onClick"
            android:singleLine="true"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvStrupVer1Color6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:onClick="txt_onClick"
            android:singleLine="true"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvStrupVer1Color7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:onClick="txt_onClick"
            android:singleLine="true"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvStrupVer1Color8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:onClick="txt_onClick"
            android:singleLine="true"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:gravity="center" />
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <Chronometer
            android:id="@+id/chronometer_strup_ver1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="4"
            android:layout_weight="100"
            android:clickable="true"
            android:format="%s"
            android:gravity="center"
            android:onClick="startPauseStrupVer1_onClick"
            android:textColor="#e71f1f"
            android:textSize="25sp"
            android:visibility="gone" />
    </TableRow>

</TableLayout>
