<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/groundStrup_ver1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    tools:context="ru.whydt.brain_gym.StrupActivity_ver1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0">

        <Button
            android:id="@+id/button11"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_weight="25"
            android:background="@drawable/ic_house"
            android:onClick="buttonHome_onClick"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonStrupStartPause"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_weight="25"
            android:background="@drawable/textview_border"
            android:onClick="startPause_onClick"
            android:text="@string/button_nameStartPause"
            android:textSize="12sp" />


        <Button
            android:id="@+id/buttonStrupClear"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_weight="25"


            android:background="@drawable/textview_border"
            android:onClick="strupVer1Clear_onClick"
            android:text="@string/button_nameStop"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonStrupOptions"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_weight="25"
            android:background="@drawable/textview_border"
            android:onClick="strupVer1Options_onClick"
            android:text="@string/button_nameOptions"
            android:textSize="12sp" />
    </TableRow>

    <TableRow
        android:id="@+id/trow1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:layout_weight="0">

        <TextView
            android:id="@+id/txtTimerMaxTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="5sp"
            android:layout_weight="33"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#bb1e1e" />

        <TextView
            android:id="@+id/txtTimerExTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginLeft="5sp"
            android:layout_weight="33"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#bb1e1e" />

        <TextView
            android:id="@+id/textViewAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_marginLeft="5sp"
            android:layout_weight="33"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#bb1e1e" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:layout_marginTop="10sp"
        android:layout_weight="0">

        <TextView
            android:id="@+id/textViewType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_span="4"
            android:layout_weight="100"
            android:gravity="center"
            android:textColor="#060606"
            android:textSize="20sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:layout_marginTop="10sp"
        android:layout_weight="0">

        <TextView
            android:id="@+id/textViewExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10sp"
            android:layout_span="4"
            android:layout_weight="100"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold" />
    </TableRow>

    <TableLayout
        android:id="@+id/table1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="100">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="0">

            <TextView
                android:id="@+id/textViewColor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewColor2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="0">

            <TextView
                android:id="@+id/textViewColor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewColor4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="0">

            <TextView
                android:id="@+id/textViewColor5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewColor6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="0">

            <TextView
                android:id="@+id/textViewColor7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewColor8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:gravity="center"
                android:onClick="txt_onClick"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <Chronometer
            android:id="@+id/chronometer_strup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="4"
            android:layout_weight="100"
            android:clickable="true"
            android:format="%s"
            android:gravity="center"
            android:onClick="startPause_onClick"
            android:textColor="#e71f1f"
            android:textSize="25sp"
            android:visibility="gone" />
    </TableRow>

</TableLayout>
